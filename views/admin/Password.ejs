<%- include('./header.ejs') %>
  <%- include('./sidebar.ejs') %>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper" style="background-color: #9CAFAA;">
      <!-- Content Header (Page header) -->
      <div class="content-header">
        <div class="container-fluid">
          <div class="row mb-2"> 
            <div class="col-sm-6">
              <h1 class="m-0 text-primary"> Password</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
              <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="/admin/dashboard">Home</a></li>
                <li class="breadcrumb-item active">Profile</li>
               
              </ol>
            </div><!-- /.col -->
          </div><!-- /.row -->
        </div><!-- /.container-fluid -->
      </div>
      <!-- /.content-header -->

      <!-- Main content -->
      <div class="content">
        <div class="container-fluid" style="padding-left: 450px; " >
          <div class="card"style="width: 30rem; height: 30rem; " >
            <!-- /.card-header -->
           
            <div class="card-body  " style="background: #FEECE2;">
              <form action="/admin/Password" method="post">
                <!-- Current Password -->

                <center><h3 style="color:orangered;">Change Password </h3></center>
                <br>
                <div class="mb-3">
                    <label for="currentPassword" class="form-label">old  Password :</label>
                    <input type="password" class="form-control" name="op" required>
                </div>

                <!-- New Password -->
                <div class="mb-3">
                    <label for="newPassword" class="form-label">New Password :</label>
                    <input type="password" class="form-control"  name="np" required>
                </div>

                <!-- Confirm New Password -->
                <div class="mb-3">
                    <label for="confirmPassword" class="form-label">Confirm New Password :</label>
                    <input type="password" class="form-control"  name="cp" required>
                </div>
                <br>

                <!-- Submit Button -->
                <center><button type="submit" class="btn btn-primary ">Change Password</button></center>
            </form>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div><!-- /.container-fluid -->
        <div class="col-md-4"></div>
      </div>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <!-- /.control-sidebar -->
